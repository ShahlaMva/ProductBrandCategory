@model  ProductVM
@{
    ViewData["Title"] = "Index";
}

<div class="col-12 col-lg-auto mt-3 d-block">
    <div class="page-heading">
        <div class="box-head">
            <a href="Create" class="button button-outline btn btn-primary" style="margin-left:275px;"><span>Create</span></a>
        </div>

    </div>
    <table class="table table-dark" style="width:1000px;margin-left:275px;">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <th scope="col">Brand Name</th>

                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Count</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>






                <th scope="col">Options</th>



            </tr>
        </thead>
        <tbody>
            @{ int count = 0;
                foreach (var product in Model.Products)

                { count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@Model.BrandCategories.Where(b => b.Id == product.BrandCategoryId).FirstOrDefault().Category.CategoryName</td>
                            <td>@Model.BrandCategories.Where(b => b.Id == product.BrandCategoryId).FirstOrDefault().Brand.BrandName</td>

                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            <td>@product.Count</td>
                            <td>@product.Description</td>
                            <td><img src="~/assets/img/@product.Image" style="width:200px;"alt="Alternate Text" /></td>






                            <td>
                                <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success"><i class="fa fa-eye"></i></a>
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i></a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-warning"><i class="fa fa-trash-o"></i></a>
                            </td>




                        </tr>
                }


            }
        </tbody>
    </table>


