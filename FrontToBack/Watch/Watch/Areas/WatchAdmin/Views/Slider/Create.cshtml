@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="app-main__outer">
    <div class="app-main__inner">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group" style="width:200px">
                <label>Photo</label>

            </div>
            <div class="form-group">
                <label asp-for="@Model.Title"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Text"></label>
                <input asp-for="@Model.Text" class="form-control" />
                <span asp-validation-for="@Model.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Photo"></label>
                <input asp-for="@Model.Photo" class="form-control" />
                <span asp-validation-for="@Model.Photo" class="text-danger"></span>
            </div>





            <button type="submit" class="au-btn au-btn-icon au-btn--green btn-primary">
                <i class="zmdi zmdi-plus"></i>Create
            </button>
        </form>
    </div>







</div>





