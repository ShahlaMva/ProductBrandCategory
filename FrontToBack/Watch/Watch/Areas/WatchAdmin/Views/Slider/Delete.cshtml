@model Slider
@{
    ViewData["Title"] = "Delete";
}

<div class="app-main__outer">
    <div class="app-main__inner">

        <h4>Title</h4>
        <h5>@Model.Title</h5>

        <h4>Content </h4>
        <h5>@Model.Text</h5>
        <h4>Image</h4>
        <h5><img src="~/assets/img/hero/@Model.Image" alt="Alternate Text" /></h5>

        <h3 class="text-danger">Bu məlumatı silmək istəyirsiniz?</h3>
    </div>


    <div class="row">
        <div class="col-12 ml-lg-4">
            <form method="post">
                <input type="submit" class="btn btn-danger" value="Delete" />
            </form>

        </div>
    </div>
    <div class="row">

        <div class="col-12 mt-3 ml-lg-4">
            <a asp-action="Index">Go Back</a>
        </div>
    </div>
</div>



