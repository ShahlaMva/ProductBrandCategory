@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}

<table class="table"style="margin-left:300px;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>

        </tr>
    </thead>
    <tbody>
        @{int count = 0;
            foreach (Slider slider in @Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@slider.Title</td>
                    @if (@slider.Text.Length > 50)
                    {
                        <td> @slider.Text.Substring(0, 50)...</td>
                    }
                    else
                    {
                        <td>@slider.Text</td>
                    }

                    <td><img src="~/assets/img/@slider.Image" style="width:100px;height:200px;" alt="Alternate Text" /></td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-success"><i class="fa fa-eye"></i></a>
                        <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i></a>
                        <a asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-warning"><i class="fa fa-trash-o"></i></a>




                    </td>
                </tr>
            }
        }


    </tbody>
</table>

